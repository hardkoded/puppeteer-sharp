<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackOnBuild>true</PackOnBuild>
    <PackageVersion>1.16.0</PackageVersion>
    <Authors>Darío Kondratiuk</Authors>
    <Owners>Darío Kondratiuk</Owners>
    <PackageProjectUrl>https://github.com/kblok/puppeteer-sharp</PackageProjectUrl>
    <Summary>Headless Chrome .NET API</Summary>
    <PackageTags>headless,chrome,puppeteer</PackageTags>
    <Title>PuppeteerSharp</Title>
    <Description>Headless Chrome .NET API</Description>
    <PackageId>PuppeteerSharp</PackageId>
    <PackageReleaseNotes><![CDATA[
# New Features

 * Tracing.StartAsync without options.
 * Add Browser.IsConnected.

# Changelog

 * Roll Chromium to r656675.
 * Update Accessibility comments.
 * Add failing test for request interception with sync XHRs.
 * Teach Page.SetContentAsync to work with tricky content.
 * Make sure exposeFunction works with complex args.
 * Add cookie tests.
 * Eoot option in Page.Accessibility.SnapshotAsync().
 * Create workers from service workers and shared workers.

 ]]></PackageReleaseNotes>
    <ReleaseVersion>1.16.0</ReleaseVersion>
    <SynchReleaseVersion>false</SynchReleaseVersion>
  </PropertyGroup>
  <PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\netstandard2.0\PuppeteerSharp.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup>
    <LangVersion>7.3</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.0.2" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="System.Net.Http" Version="4.3.3" />
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.0.2" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.1" />
  </ItemGroup>
</Project>
